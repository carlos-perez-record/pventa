<% if @c.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "row", center: @c %>');
  $('.alert-success').html("El centro de costos ha sido creada").show();
  $('#center-modal').modal('hide');
<% else %>
  // show first error
  alert('ERROR: Debe diligenciar todos los campos del formulario');
<% end %>
