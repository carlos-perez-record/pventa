<div class="contenedor_actives">
  <!-- <div class="row"> -->
    <!-- <div class="col-sm-8 col-sm-offset-2"> -->
      <div class="page-header">
        <h1>Listado de Activos Fijos</h1>
        <div class="icons">
          <%= link_to "<span class='glyphicon glyphicon-arrow-left' data-toggle='tooltip' title='ir a Inicio'></span>".html_safe, points_path %>
          <%= link_to "<span class='glyphicon glyphicon-plus' data-toggle='tooltip' title='Registrar Nuevo Activo Fijo'></span>".html_safe, new_active_path, remote: true %>
          <%= link_to "<span class='glyphicon glyphicon-plus-sign' data-toggle='tooltip' title='Registrar Nuevo Dispositivo'></span>".html_safe, new_device_path, remote: true %>
        </div>
      </div>
      <div class="fondo_actives">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>DISPOSITIVO</th>
              <th>SERIAL</th>
              <th>PLACA</th>
              <th>ACCION</th>
            </tr>
          </thead>
          <% @a.each do |active| %>
          <tr>
            <td><%d=Device.find(active.devices_id)%><%=d.nombre+" "+d.tipo%></td>
            <td><%=active.serial %></td>
            <td><%=active.placa %></td>
            <td>
              <div class="icons">
                <%= link_to "<span class='glyphicon glyphicon-pencil' data-toggle='tooltip' title='Modificar Activo Fijo'></span>".html_safe, edit_active_path(active), remote: true %>
                <%= link_to "<span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Elimina el Centro de Costo y los puntos de venta que lo contienen'></span>".html_safe, active, method: :delete, data: { confirm: "Â¿Esta seguro de eliminar este activo fijo?" } %>
              </div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    <!-- </div> -->
  <!-- </div> -->
</div>
