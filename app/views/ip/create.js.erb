<% if @i.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "row", use: @i %>');
  $('.alert-success').html("La IP ha sido registrada").show();
  $('#center-modal').modal('hide');
<% else %>
  // show first error
  alert('ERROR: Especifique un numero IP valido');
<% end %>
