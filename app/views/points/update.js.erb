<% if @p.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @p.id %>').replaceWith(' <%= j render "row", point: @p %>');
  $('.alert-success').html("La tecnologia de este punto ha sido modificada").show();
  $('#point-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @p.errors.full_messages[0] %>');
<% end %>
